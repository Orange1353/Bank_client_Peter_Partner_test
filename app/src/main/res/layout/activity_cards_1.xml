<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardsActivity"
    android:background="#ffffff"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="411dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:elevation="8dp"
        android:background="#ffffff"
        >

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_rectangle_175_mycards"
            android:elevation="8dp"

            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/vector_20"
            android:scaleType="center"
            android:layout_width="18dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_vector_20_image_foreground"
            android:elevation="9dp"
            tools:ignore="MissingConstraints"
            android:onClick="toast"/>

        <TextView
            android:layout_width="127dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="133dp"
            android:layout_marginTop="1dp"
            android:elevation="9dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/my_cards"
            android:textColor="#141414"
            android:textSize="18sp"
            android:translationY="-2.45sp"
            tools:ignore="MissingConstraints"

            />



    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".CardsActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="665dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="61dp"
            android:onClick="clickUser"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>