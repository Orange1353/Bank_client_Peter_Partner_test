<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f3f6"
    android:orientation="vertical">




<View
    android:id="@+id/rectangle_1"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:background="#ffffff"
    android:elevation="8dp"

    tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_gravity="center_vertical"
        android:elevation="9dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/main"
        android:textColor="#141414"
        android:textSize="18sp"


        android:translationY="-2.45sp"

        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1"
        tools:ignore="MissingConstraints" />


    <FrameLayout
        android:id="@+id/frameCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="right"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
        tools:ignore="MissingConstraints">


        <View
            android:id="@+id/rectangleBig"

            android:layout_width="wrap_content"
            android:layout_height="283dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/ic_rectangle_big_card"
            android:elevation="8dp"
            android:onClick="clickCard"


            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/groupcard"
            android:layout_width="39dp"
            android:layout_height="24dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="114dp"

            android:elevation="8dp" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="112dp"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="6sp"
            android:text=""
            android:textColor="#141414"
            android:textSize="22sp"
            android:translationY="-3.11sp" />

        <ImageView
            android:id="@+id/usericon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="176dp"
            android:background="@drawable/ic_user_1"
            android:elevation="8dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="176dp"
            android:elevation="8dp"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="#8c9aae"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/validtext"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_gravity="right"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="38dp"
            android:elevation="8dp"
            android:fontFamily="sans-serif"
            android:text="VALID THRU"
            android:textColor="#8c9aae"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/validdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="183dp"
            android:layout_marginEnd="38dp"
            android:elevation="8dp"
            android:fontFamily="sans-serif"
            android:text=""
            android:textColor="#8c9aae"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="237dp"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="6sp"
            android:text=""
            android:textColor="#141414"
            android:textSize="28sp"
            android:translationY="-0.59sp" />

        <TextView
            android:id="@+id/yourbalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="232dp"
            android:layout_marginEnd="38dp"
            android:elevation="8dp"
            android:fontFamily="sans-serif"
            android:text="Your balance"
            android:textColor="#8c9aae"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/amount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="38dp"
            android:elevation="8dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="6sp"
            android:text=""
            android:textColor="#141414"
            android:textSize="18sp" />

    </FrameLayout>




    <TextView
        android:id="@+id/current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginTop="26dp"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="1sp"
        android:text="Change currency"
        android:textColor="#141414"
        android:textSize="20sp"
        android:translationY="-0.28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameCard" />



    <ImageButton
        android:id="@+id/GBR"
        android:layout_width="110dp"
        android:layout_height="110dp"

        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_group_18_background"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current"
        android:onClick="clickGBR"
        />


    <ImageButton
        android:id="@+id/EUR"
        android:layout_width="110dp"
        android:layout_height="110dp"

        android:layout_marginStart="13dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/ic_group_20_background"
        android:elevation="8dp"
        app:layout_constraintEnd_toStartOf="@+id/RUB"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/GBR"
        app:layout_constraintTop_toBottomOf="@+id/current"
        android:onClick="clickEUR"/>

    <ImageButton
        android:id="@+id/RUB"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:onClick="clickRUB"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/ic_group_19_background"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current" />

    <fragment
        android:id="@+id/jjjj"
        class="com.example.bank_client.BlankFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/EUR"
        tools:layout="@layout/fragment_blank"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>